<?xml version="1.0" encoding="GBK"?>
<table sqlname="loan">

	<operation name="getById">
		<sql><![CDATA[
			select * from loan where id=?
		]]></sql>
	</operation>
	
	<operation name="insert">
		<sql><![CDATA[
			insert into loan(loaner, executor, amount, currency, term, annual_rate, first_repayment_date, repayment_mode, repayment_config) values(?, ?, ?, ?, ?, ?, ?, ?, ?)
		]]></sql>
	</operation>
	
